# #
#Setting icons
sudo mkdir /usr/share/awesome/icons_tag
sudo cp -r /home/roah/.config/awesome/icons/* /usr/share/awesome/icons_tags/
#
#Setting custom commands
sudo cp -r /home/roah/.config/awesome/programs/* /usr/bin/
#
#Setting theme and wallpaper
sudo cp -r /home/roah/.config/awesome/themes /usr/share/awesome/themes/default-roah
